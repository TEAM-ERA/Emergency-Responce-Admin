<div class="card recent-post emergencies animate fadeUp">
    <div class="card-content">
       <h4 class="card-title mb-0 activator">
          Recent Emergency Cases
          <i class="material-icons float-right">more_vert</i>
       </h4>
       <ul class="collection mb-0">
        <% const docs = querySnapshot.docs; let count = 0; %>
        <% for (const doc of docs) { %>
            <li class="collection-item avatar">
                <img src="<%= doc.data().icon %>" alt="" class="circle p-5" />
                <p class="font-weight-600"><a href="/first-aid-details?id=<%= doc.id %>"><%= doc.data().title %></a></p>
             </li>
            <% ++count; %>
            <% if (count == 5) break; %>
        <% } %>
       </ul>
       <a href="/add-first-aid" class="btn-floating halfway-fab waves-effect waves-light red"> <i class="material-icons">add</i>
       </a>
    </div>
    <div class="card-reveal" style="display: none; transform: translateY(0%);">
        <span class="card-title grey-text text-darken-4">Emergency Cases<i class="material-icons right">close</i>
        </span>
        <div class="card-content center-align">
            <h3 class="background-round" style="width: 75px;height: 75px;margin: auto;">
                <b><%- querySnapshot.size %></b>
            </h3>
            <p>Total Posts</p>
            <p class="mt-3"><a class="green-text" href="/first-aid">View All Posts</a></p>
            <p class="mt-3"><a class="red-text" href="/add-first-aid">Add New Post</a></p>
          </div>
      </div>
    <div class="card-action">
       <a href="/first-aid">View All Posts >></a>
    </div>
 </div>